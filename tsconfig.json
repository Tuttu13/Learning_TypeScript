{
  "compilerOptions": {
    // 他の設定項目
    "module": "commonjs",
    "target": "es6",
    "jsx": "react", // 必要に応じて
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".", // 必要に応じて
    "types": ["jest", "expect-type", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}